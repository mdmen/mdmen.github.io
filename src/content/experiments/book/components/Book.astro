---
import PageSegments from "./BookPageSegments.astro";

export interface Props {
  pageSegments?: number;
}

const { pageSegments = 8 } = Astro.props;
---

<div class="wrapper">
  <div class="book" style={`--segments-count: ${pageSegments}`}>
    <div class="book-cover book-cover-wide book-cover-front">
      <div class="book-cover-inner book-cover-inner-front">
        <div class="book-page book-page-turned"></div>
      </div>
    </div>
    <div class="book-cover book-cover-wide book-cover-back">
      <div class="book-cover-inner"></div>
    </div>
    <div class="book-cover book-cover-middle"></div>
    <div class="book-side book-side-right"></div>
    <div class="book-side book-side-top"></div>
    <div class="book-side book-side-bottom"></div>
    <div class="book-page book-page-stacked">
      <div class="book-page-inner"></div>
      <PageSegments total={pageSegments} />
    </div>
  </div>
</div>
