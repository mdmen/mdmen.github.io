---
import type { Icons } from "@/types/common";
import Icon from "./Icon.astro";

interface Item {
  name: string;
  link: string;
  icon: Icons;
}

export interface Props {
  items: Item[];
}

const { items } = Astro.props;
---

<div class="socials">
  {
    items.map(({ link, name, icon }) => (
      <a href={link} target="_blank">
        <span class="sr-only">{name}</span>
        <Icon icon={icon} />
      </a>
    ))
  }
</div>

<style>
  .socials {
    display: flex;
    gap: var(--spacing-4);
  }
</style>
