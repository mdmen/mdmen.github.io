---
import Icon from "./Icon.astro";

export interface Props {
  date: Date;
  className?: string;
}

const { date, className } = Astro.props;
---

<time class:list={["date", className]} datetime={date.toISOString()}>
  <Icon icon="date" className="date-icon" />
  {
    date.toLocaleDateString("en-US", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
