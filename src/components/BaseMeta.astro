---
import { websiteConfig } from "@/website.config";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { author, titleSuffix, defaultDescription } = websiteConfig;
const { title, description = defaultDescription, ogImage } = Astro.props;

const pageUrl = new URL(Astro.url.pathname, Astro.site);
const ogImageUrl = new URL(ogImage || "/og-image.png", Astro.url);
const ogType = ["/projects/", "/experiments/"].find(
  (path) => Astro.url.pathname.startsWith(path) && Astro.url.pathname !== path,
)
  ? "article"
  : "website";
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<meta name="description" content={description} />
<title>{title}{titleSuffix}</title>

<meta property="og:title" content={title} />
<meta property="og:type" content={ogType} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:url" content={pageUrl} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:url" content={pageUrl} />
<meta name="twitter:image" content={ogImageUrl} />

<meta name="author" content={author} />
<meta name="generator" content={Astro.generator} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
