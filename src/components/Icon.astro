---
import type { Icons } from "@/types/common";

export interface Props {
  icon: Icons;
  class?: string;
}

const { class: className, icon, ...rest } = Astro.props;
---

<svg
  class:list={["icon", "lucide-icon", className]}
  aria-hidden="true"
  {...rest}
>
  <use href={`/icons.svg#${icon}`}></use>
</svg>

<style>
  .icon {
    --size-icons: 1.75rem;

    width: var(--size-icons);
    height: var(--size-icons);
    min-width: var(--size-icons);
    color: light-dark(#768694, #abb2bf);
  }

  :global(a, button) {
    &:is(:hover, :focus-visible) .icon {
      color: light-dark(#4c565f, #fff);
    }
  }

  .lucide-icon {
    stroke: currentColor;
    fill: none;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }
</style>
