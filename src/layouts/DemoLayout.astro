---
import "@/styles/reset.css";

import BaseMeta from "@/components/BaseMeta.astro";
import websiteConfig from "@/website.config";

interface Props {
  title: string;
  description: string;
  ogImage: string;
}

const { title, description, ogImage } = Astro.props;

const pageTitle = `${title} - Demo`;
---

<html lang="en">
  <head>
    <BaseMeta
      title={pageTitle}
      description={description}
      ogImage={ogImage}
      author={websiteConfig.author}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
